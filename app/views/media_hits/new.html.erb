
<div id="page-header" class="clearfix">
    <div class="page-header">
        <h2>Add New Media Hit</h2>
        <span class="txt">Update your database</span>
    </div>
    <div class="header-stats">
        <div class="spark clearfix">
            <div class="spark-info"><span class="number">2345</span>Visitors</div>
            <div id="spark-visitors" class="sparkline"></div>
        </div>
        <div class="spark clearfix">
            <div class="spark-info"><span class="number">17345</span>Views</div>
            <div id="spark-templateviews" class="sparkline"></div>
        </div>
        <div class="spark clearfix">
            <div class="spark-info"><span class="number">3700$</span>Sales</div>
            <div id="spark-sales" class="sparkline"></div>
        </div>
    </div>
</div>

<div class="row col-md-8">
    <div class="panel panel-default">
        <!-- Start .panel -->
        <div class="panel-heading">
            <h4>Add Manually</h4>
        </div>
        <div class="panel-body">
            <p class="mb15">Use this form to add new media hits manually to the database.</p>

        <form class="form-horizontal" role="form">
            <%= form_for :media_hits, url: media_hits_path do |f| %>
            
            <div class="form-group">
                <%= f.label :title, :class => 'col-sm-2 control-label' %>
                
                <div class="col-sm-10">
                    <%= f.text_field :title, :class => 'form-control' %>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.label :text, :class => 'col-sm-2 control-label' %>
                
                <div class="col-sm-10">
                    <%= f.text_area :text, :class => 'form-control' %>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.label :author, :class => 'col-sm-2 control-label' %>
                
                <div class="col-sm-10">
                    <%= f.text_field :author, :class => 'form-control' %>
                </div>
                
                
            </div>
            
            <div class="col-sm-13 text-right">
                
                <%= button_tag( :class => "btn btn-success mr5 mb10") do %>
                <i class="glyphicon glyphicon-thumbs-up mr5"></i> Save
                <% end %>
                
                <%= button_tag( :class => "btn btn-default mr5 mb10") do %>
                <i class="glyphicon glyphicon-repeat mr5"></i> Save & Add More 
                <% end %>

                
            </div>


            <% end %>
        </form>
            </div>
    </div>
</div>

<body class="login-page">
        <!-- Start login container -->
        <div class="container login-container">
            <div class="login-panel panel panel-default plain animated bounceIn">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title text-center">
                        <img id="logo" src="/assets/img/logo-dark.png" alt="Dynamic logo">
                    </h4>
                </div>
                <div class="panel-body">

                	<% if @user.errors.any? %>
					  <div id="error_explanation">
					    <div class="alert alert-danger fade-in">
					      Hold up! You have <%= pluralize(@user.errors.count, "error") %>.
					    </div>
					    <ul>
					    <% @user.errors.full_messages.each do |msg| %>
					      <li><%= msg %></li>
					    <% end %>
					    </ul>
					  </div>
					<% end %>
                	

                	<%= form_for @user, html: { :class => "form-horizontal mt0" } do |f| %>
                        <div class="form-group mb20">
                            <div class="col-lg-12">
                                <div class="input-group input-icon">
                                    <span class="input-group-addon"><i class="fa  fa-smile-o"></i></span>
                                    <%= f.text_field :name, :class => "form-control", :placeholder => "Your name" %>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb20">
                            <div class="col-lg-12">
                                <div class="input-group input-icon">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    <%= f.email_field :email, :class => "form-control", :placeholder => "Your email" %>
                                </div>
                                <div class="input-group input-icon">
                                    <span class="input-group-addon"><i class="fa fa-at"></i></span>
                                    <%= f.text_field :username, :class => "form-control", :placeholder => "Your username" %>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb20">
                            <div class="col-lg-12">
                                <div class="input-group input-icon">
                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                    <%= f.password_field :password, :class => "form-control", :placeholder => "  Pick a password" %>
                                </div>
                                <div class="input-group input-icon">
                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm password" %>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb0">
                            <div class="col-md-12">
                                <%= f.submit "Register", class: "btn btn-default" %>
                            </div>
                        </div>
                    <% end %>
                </div>

                <div class="panel-footer gray-lighter-bg bt">
                    <h4 class="text-center"><strong>Already have an account ?</strong>
                    </h4>
                    <p class="text-center"><a href="login.html" class="btn btn-primary">Sign in</a>
                    </p>
                </div>
            </div>
            <!-- End .panel -->
        </div>
        <!-- End login container -->
        <div class="container">
            <div class="footer">
                <p class="text-center">Â©2014 Copyright Dynamic admin. All right reserved !!!</p>
            </div>
        </div>
